srcdir = @srcdir@
VPATH  = @srcdir@

RESOURCE_MGR_OBJS := $(shell ls $(srcdir)/*.c | sed 's&$(srcdir)&lib&' | sed 's/\.c$$/\.o /' )
RESOURCE_MGR_HEADERS := $(shell ls $(srcdir)/*.h )
TPMSOCKETS_OBJS := $(shell ls $(srcdir)/../tcti/tpmsockets/*.cpp | sed 's&$(srcdir)/\.\./tcti/tpmsockets&lib&' | sed 's/\.cpp$$/\.o /' )
TPMSOCKETS_HEADERS := $(shell ls $(srcdir)/../tcti/tpmsockets/*.h )
LOCALTPM_OBJS := $(shell ls $(srcdir)/../tcti/localtpm/*.c | sed 's&$(srcdir)/\.\./tcti/localtpm&lib&' | sed 's/\.c$$/\.o /' )
LOCALTPM_HEADERS := $(shell ls $(srcdir)/../tcti/localtpm/*.h )
COMMON_OBJS := $(shell ls $(srcdir)/../common/*.c | sed 's&$(srcdir)/\.\./common&lib&' | sed 's/\.c/\.o /' )
COMMON_HEADERS := $(shell ls $(srcdir)/../common/*.h )
SYSAPI_HEADERS := $(shell ls $(srcdir)/../sysapi/include/*.h )

TPMCLIENT_HEADERS = $(srcdir)/tpmclient.h

OBJS = $(RESOURCE_MGR_OBJS) $(TPMSOCKETS_OBJS) $(LOCALTPM_OBJS) $(COMMON_OBJS)

CC = @CC@
CXX = @CXX@

INCLUDE_DIRS = -I$(srcdir)/../sysapi/include -I$(srcdir)/../common -I$(srcdir)/../tcti/tpmsockets -I$(srcdir)/../tcti/localtpm -I$(srcdir) -I$(srcdir)/../test/tpmclient
LIBS = ../sysapi/lib/libtpm.a
LIB_DIR = lib

CFLAGS = @CFLAGS@ $(INCLUDE_DIRS)
CXXFLAGS = @CXXFLAGS@ $(INCLUDE_DIRS)

.PHONY: all clean
all: resourcemgr

resourcemgr: $(OBJS) $(LIBS) Makefile
	$(CC) $(CFLAGS) -pthread -o $@ $(OBJS) $(LIBS)

$(LIBS):
	$(MAKE) -C ../sysapi

$(OBJS): | $(LIB_DIR)

$(LIB_DIR)/%.o: %.c $(RESOURCE_MGR_HEADERS) $(COMMON_HEADERS) $(TPMSOCKETS_HEADERS) $(LOCALTPM_HEADERS) Makefile $(SYSAPI_HEADERS)
	$(CC) $(CFLAGS) -c $< -o $@

$(LIB_DIR)/%.o: ../common/%.c $(COMMON_HEADERS) Makefile $(SYSAPI_HEADERS)
	$(CC) $(CFLAGS) -c $< -o $@

$(LIB_DIR)/%.o: ../tcti/tpmsockets/%.cpp $(TPMSOCKETS_HEADERS) Makefile $(SYSAPI_HEADERS)
	$(CXX) $(CXXFLAGS) -c $< -o $@

$(LIB_DIR)/%.o: ../tcti/localtpm/%.c $(LOCALTPM_HEADERS) Makefile $(SYSAPI_HEADERS)
	$(CC) $(CFLAGS) -c $< -o $@

$(LIB_DIR):
	-@mkdir -p $@

clean:
	@rm -rf resourcemgr $(LIB_DIR)
	@$(MAKE) -C ../sysapi -f Makefile clean

